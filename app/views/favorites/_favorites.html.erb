<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), method: :delete, remote: true, class: "glyphicon glyphicon-heart" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>